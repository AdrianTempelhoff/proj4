<%= form_for @basket_item, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :basket_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :basket_id, :class => 'number_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :item_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :item_id, :class => 'number_field' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                basket_items_path, :class => 'btn' %>
  </div>
<% end %>
